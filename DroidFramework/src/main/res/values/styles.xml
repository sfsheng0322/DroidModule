<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TvTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/ripple_item_clicked_with_mask</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/font_black_2</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="EtEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/font_black_3</item>
        <item name="android:textColor">@color/font_black_2</item>
    </style>

</resources>